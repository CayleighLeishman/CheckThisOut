<main>
    <section>
        <h2>Welcome, <%= user.name %>!</h2>
        <p>This is your dashboard. Here you can manage your activities and view updates.</p>
    </section>
    <section>
        <h3>Checked Out Books</h3>
        <ul>
            <% checkedOutBooks.forEach(book => { %>
                <li><%= book.title %> by <%= book.author %></li>
            <% }) %>
        </ul>
    </section>
    <section>
        <h3>Past Books</h3>
        <ul>
            <% pastBooks.forEach(book => { %>
                <li><%= book.title %> by <%= book.author %></li>
            <% }) %>
        </ul>
    </section>
    <section>
        <h3>Bill</h3>
        <p>Total Amount Due: $<%= bill.amountDue %></p>
    </section>
</main>
